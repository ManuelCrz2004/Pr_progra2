Screen:

    MDCard:
        size_hint: None, None
        fullscreen: True
        size: 850, 300
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 65
        spacing: 35
        orientation: 'horizontal'
        MDIcon:
            icon: 'account'
            icon_color: 0, 0, 0, 0
            halign: 'right'
            valign : 'top'
            font_size: 120
        MDTextField:
            id: user
            icon_left: "account-check"
            hint_text: "Username"
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.5}
            write_tab: False
            focus: True
            on_text_validate: pwd_field.focus = True
        MDTextField:
            id: password
            icon_left: "key-variant"
            hint_text: "Password"
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: 220
            font_size: 20
            write_tab: False
            pos_hint: {"center_x": 0.5}
            password: True
        MDFillRoundFlatButton:
            text: "INGRESAR"
            font_size: 15
            halign: 'center'
            valign: 'bottom'
            on_press: app.login()